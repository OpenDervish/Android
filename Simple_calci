//Java
package com.example.simple_calci;

import androidx.appcompat.app.AppCompatActivity;
import android.view.View;
import android.widget.EditText;
import android.widget.Toast;

import android.os.Bundle;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
    }

    public void add(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"+");
    }

    public void sub(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"-");
    }

    public void mul(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"*");
    }

    public void div(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"/");
    }

    public void btn_9(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"9");
    }

    public void btn_8(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"8");
    }

    public void btn_7(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"7");
    }

    public void btn_6(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"6");
    }

    public void btn_5(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"5");
    }

    public void btn_4(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"4");
    }

    public void btn_3(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"3");
    }

    public void btn_2(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"2");
    }

    public void btn_1(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"1");
    }

    public void equals(View view)
    {
        String n2;
        EditText n1=(EditText) findViewById(R.id.id1);
        n2=(n1.getText().toString());

        try
        {
            if(n2.contains("+"))
            {
                String ele[]=n2.split("\\+",2);
                Double x=Double.parseDouble(ele[0]);
                Double y=Double.parseDouble(ele[1]);
                n1.setText(("")+(x+y));
                Toast.makeText(this,"addition",Toast.LENGTH_SHORT).show();
            }

            else if(n2.contains("-"))
            {
                String ele[]=n2.split("\\+",2);
                Double x=Double.parseDouble(ele[0]);
                Double y=Double.parseDouble(ele[1]);
                n1.setText(("")+(x-y));
                Toast.makeText(this,"subtraction",Toast.LENGTH_SHORT).show();
            }

            else if(n2.contains("*"))
            {
                String ele[]=n2.split("\\+",2);
                Double x=Double.parseDouble(ele[0]);
                Double y=Double.parseDouble(ele[1]);
                n1.setText(("")+(x*y));
                Toast.makeText(this,"multiplication",Toast.LENGTH_SHORT).show();
            }

            else if(n2.contains("/"))
            {
                String ele[]=n2.split("\\+",2);
                Double x=Double.parseDouble(ele[0]);
                Double y=Double.parseDouble(ele[1]);
                if(y!=0)
                {
                    n1.setText(("") + (x / y));
                    Toast.makeText(this, "division", Toast.LENGTH_SHORT).show();
                }

                else
                {
                    n1.setText("");
                    Toast.makeText(this, "Division by Zero Error", Toast.LENGTH_SHORT).show();
                }
            }
        }

        catch(Exception ex)
        {
            n1.setText("Error");
            Toast.makeText(this, "Invalid Expression", Toast.LENGTH_SHORT).show();
        }

    }

    public void btn_0(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+"0");
    }
    public void button_2(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText(n1.getText().toString()+".");
    }

    public void button_C(View view)
    {
        EditText n1=(EditText) findViewById(R.id.id1);
        n1.setText("");
    }
}
